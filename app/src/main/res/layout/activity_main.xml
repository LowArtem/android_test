<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:scaleX="1.75"
                android:scaleY="1.75"
                android:src="@drawable/img_background"
                android:layout_height="298dp"/>

            <Button
                android:id="@+id/back_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="56dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/ic_back"
                android:backgroundTint="@color/title"/>

            <Button
                android:id="@+id/more_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/ic_more"
                android:backgroundTint="@color/title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:paddingBottom="30dp">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="98dp"
                android:layout_height="105dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/logo_mini"/>

            <TextView
                android:id="@+id/logo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/logo_image"
                app:layout_constraintStart_toEndOf="@id/logo_image"
                android:layout_marginTop="40dp"
                android:layout_marginStart="12dp"
                android:text="@string/game_name"
                android:fontFamily="@font/sk_modernist_bold"
                android:textColor="@color/title"
                android:textSize="25sp"/>

            <ImageView
                android:id="@+id/logo_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/logo_name"
                app:layout_constraintStart_toStartOf="@id/logo_name"
                android:src="@drawable/ic_stars"
                android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/logo_stars"
                app:layout_constraintTop_toTopOf="@id/logo_stars"
                app:layout_constraintBottom_toBottomOf="@id/logo_stars"
                android:layout_marginStart="10dp"
                android:text="@string/game_scores_count"
                android:textColor="@color/text_dark"
                android:textSize="12sp"/>

            <LinearLayout
                android:id="@+id/game_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/logo_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/moba"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/multiplayer"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/strategy"/>
            </LinearLayout>

            <TextView
                android:id="@+id/game_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/game_tags"
                android:layout_margin="24dp"
                android:textColor="@color/title_2"
                android:textSize="12sp"
                android:fontFamily="@font/sk_modernist_regular"
                android:text="@string/game_description"/>

            <TextView
                android:id="@+id/review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/game_description"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sk_modernist_bold"
                android:textColor="@color/title_2"
                android:textSize="16sp"
                android:text="@string/game_review_title"/>

            <TextView
                android:id="@+id/game_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/review_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/sk_modernist_bold"
                android:textColor="@color/title_2"
                android:textSize="48sp"
                android:text="@string/game_score"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/game_score"
                app:layout_constraintStart_toEndOf="@id/game_score"
                app:layout_constraintBottom_toBottomOf="@id/game_score"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_stars"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:text="@string/game_reviews_count"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/game_score"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/user_1_avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_user_1"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/user_1_avatar"
                    app:layout_constraintBottom_toBottomOf="@id/user_1_avatar"
                    app:layout_constraintStart_toEndOf="@id/user_1_avatar"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_1_name"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:textColor="@color/title"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_1_date"
                        android:textColor="@color/title_3"
                        android:textSize="12sp"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:layout_marginTop="7dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/user_1_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_1_avatar"
                    android:layout_marginTop="16dp"
                    android:text="@string/user_1_message"
                    android:textColor="@color/info"
                    android:textSize="12sp"
                    android:fontFamily="@font/sk_modernist_regular"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_1"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/user_2_avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_user_2"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/user_2_avatar"
                    app:layout_constraintBottom_toBottomOf="@id/user_2_avatar"
                    app:layout_constraintStart_toEndOf="@id/user_2_avatar"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_2_name"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:textColor="@color/title"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_2_date"
                        android:textColor="@color/title_3"
                        android:textSize="12sp"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:layout_marginTop="7dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/user_2_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_2_avatar"
                    android:layout_marginTop="16dp"
                    android:text="@string/user_2_message"
                    android:textColor="@color/info"
                    android:textSize="12sp"
                    android:fontFamily="@font/sk_modernist_regular"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="24dp"
                app:layout_constraintTop_toBottomOf="@id/user_2"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/accent"
                android:text="@string/install_button_text"
                android:fontFamily="@font/sk_modernist_bold"
                android:textSize="20sp"
                android:textColor="@color/background"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>